<h1>Product List</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Price</th>
            <th>Category</th>
            <th>Stock</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <td>{{this.title}}</td>
            <td>{{this.description}}</td>
            <td>${{this.price}}</td>
            <td>{{this.category}}</td>
            <td>{{this.stock}}</td>
            <td>
                <a href="/products/{{this._id}}">View details</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

<div class="pagination">
    {{#if hasPrevPage}}
    <a href="{{prevLink}}">Previous Page</a>
    {{/if}}

    <span>Page {{page}} of {{totalPages}}</span>

    {{#if hasNextPage}}
    <a href="{{nextLink}}">Next Page</a>
    {{/if}}
</div>